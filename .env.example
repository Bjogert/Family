# ===========================================
# Family Hub - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# App
NODE_ENV=development
API_PORT=3001
WEB_PORT=3000
API_URL=http://localhost:3001

# Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
SESSION_SECRET=replace-with-32-char-random-string

# Family password (will be hashed on first run)
# This is the password your family uses to log in
FAMILY_PASSWORD=changeme

# Database (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=family_hub
DB_USER=postgres
DB_PASSWORD=

# Google Calendar (Phase 5)
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:3001/api/calendar/auth/callback

# Encryption key for storing OAuth tokens
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=replace-with-32-char-random-string
